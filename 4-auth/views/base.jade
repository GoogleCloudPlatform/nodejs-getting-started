doctype html
html(lang="en")
  head
    title Bookshelf - Node.js on Google Cloud Platform
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css")
  body
    .navbar.navbar-default
      .container
        .navbar-header
          .navbar-brand Bookshelf

        ul.nav.navbar-nav
          li
            a(href="/books") Books
          li
            a(href="/books/mine") My Books

        p.navbar-text.navbar-right
          // [START profile]
          if profile
            if profile.image
              img.img-circle(src=profile.image.url, width=24)
            span #{profile.displayName} &nbsp;
              a(href=logout) (logout)
          else
            a(href=login) Login
          // [END profile]

    .container
      block content
